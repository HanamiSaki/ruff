/**index.wxss**/
.title {
  height: 30vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  color: #f5f5f5;
  background-color: #333;
  font-size: 1.5em;
}

.title text:first-child {
  margin-top: 10vh;
  margin-left: 3vh;
  font-weight: bold;
}

.title text:nth-child(2) {
  margin-left: 3vh;
  font-size: 1.2em;
  font-weight: bold;
}

.menu {
  height: 70vh;
  margin-top: 8vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menuText {
  background-color: #ddd;
  border-radius:0 20rpx 20rpx 0;
  padding: 28rpx 50rpx 25rpx 40rpx;
  box-shadow: 0 3px 0 0 #bbb;
  font-weight:bold;
}

.btn {
  padding: 25rpx 0 25rpx 30rpx;
  margin-top: 10vh;
  font-size: 1.3em;
  border-radius: 20rpx;
  background-color: #999; 
  box-shadow: 0 3px 0 0 #555; 
}

.btn:active {
  transform: translateY(2px);
  filter: brightness(105%);
}

.icon {
  background-size: cover;
  display: inline-block;
  margin: 0 20rpx -15rpx 0;
  width: 1.5em;
  height: 1.5em;
}

.icon-monitor {
  background-image: url("data:image/svg+xml;base64,");
}

.icon-history {
  background-image: url("data:image/svg+xml;base64,");
}
